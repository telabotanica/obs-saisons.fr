{% extends 'base.html.twig' %}

{% block title %}Menu relais{% endblock %}

{% block main_content %}
    {% include 'layout/header.html.twig' with ({
        'title': 'Menu relais',
        'subtitle': ''
    }) %}

    <div class="container">
        <div class="row">
            <div class="my-2 col-4 px-2">
                <button class="btn btn-lg btn-admin" >
                    <a href="{{ path('relay_global_stats') }}" >
                        Indicateurs globaux
                    </a>
                </button>
            </div>
            <div class="my-2 col-4 px-2">
                
                    {% if app.user.typeRelays != null %}
                        {% if app.user.typeRelays.id == 1 %}
                        <button class="btn btn-lg btn-admin" >
                            <a href="{{ path('relay_static_page_edit',{slug: 'ods-occitanie'}) }}" >
                                Modifier la page de présentation
                            </a>
                        </button>
                        {% elseif app.user.typeRelays.id == 2 %}
                        <button class="btn btn-lg btn-admin" >
                            <a href="{{ path('relay_static_page_edit',{slug: 'ods-provence'}) }}" >
                                Modifier la page de présentation
                            </a>
                        </button>
                        {% endif %}
                    {% endif %}
                </button>
            </div>
            
        </div>
    </div>
{% endblock %}
