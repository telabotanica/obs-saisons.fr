{% extends 'base.html.twig' %}
{% block meta %}
    {% if post.cover %}
        <meta property="og:image" content="{{ absolute_url(asset(post.cover)) }}">
    {% endif %}
{% endblock %}

{% block main_content %}
    {% block post_header %}{% endblock %}
    <div class="publication-date">Le {{ post.createdAt|format_datetime(pattern='d MMMM Y',locale='fr') }}, par <a
                href="{{ path('user_profile',{userId:post.author.id}) }}"><strong>{{ post.author.displayName }}</strong></a>
    </div>
    <div class="rich-text-block">
        <h2>{{ post.title|raw }}</h2>
        {{ post.content|raw }}
        {% if is_granted('ROLE_ADMIN') and (constant('App\\Entity\\Post::STATUS_PENDING') == post.status) %}
            <div><a href="{{ path('post_publish', {postId:post.id}) }}" class="button bt-form bt-valider">
                    Valider l'évènement
                </a></div>
        {% endif %}
    </div>

    {# Espace Commentaire #}
    <div class="card round">
        <div class="card-header no-bg-image">
            <h3>Espace commentaire</h3>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                {% for comment in comments %}
                    <li class="list-group-item">
                        <div>
                            {% if comment.deletedAt is not null %}
                                <h5 class="card-title">Modération</h5>
                                <p class="card-text">Un administrateur a supprimé ce commentaire</p>
                            {% else %}
                                <div class="user-info">
                                    {% set avatarPath = comment.user.avatar ? asset(comment.user.avatar) : asset('build/images/person.svg') %}
                                    <img src="{{ avatarPath }}" alt="{{ comment.user.displayName ~ ' avatar' }}" class="user-avatar">
                                    <h5 class="card-title">{{ comment.user.displayName }}</h5>
                                </div>
                                <div class="comment-item">
                                    <p class="card-text">{{ comment.comment }}</p>
                                    <div class="comment-actions">
                                        {% if is_granted('ROLE_ADMIN') or app.user.id == comment.user.id %}
                                            <form action="{{ path('comment_delete', {commentId: comment.id}) }}" method="post" onsubmit="return confirm('Are you sure?');" class="delete-form">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete-comment' ~ comment.id) }}">
                                                <button type="submit" class="btn delete-button">
                                                    <img src="{{ asset('build/images/delete.svg') }}" alt="bin" class="svg-icon-bin">
                                                </button>
                                            </form>
                                        {% endif %}
                                        {% if app.user.id == comment.user.id %}
                                            <input type="hidden" name="_token" value="{{ csrf_token('edit-comment' ~ comment.id) }}">
                                            <button type="button" class="btn edit-button" data-bs-toggle="modal" data-bs-target="#commentModal-{{ comment.id }}">
                                                <img src="{{ asset('build/images/edit-green.6c62a9cc.svg') }}" alt="Edit" class="svg-icon-edit">
                                            </button>
                                        {% endif %}
                                    </div>
                                </div>

                                <!-- Modal -->
                                <div class="modal fade" id="commentModal-{{ comment.id }}" tabindex="-1" role="dialog" aria-labelledby="commentModalCenterTitle-{{ comment.id }}" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="commentModalLongTitle-{{ comment.id }}">{{ comment.user.displayName }}</h5>
                                                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <form action="{{ path('comment_update', {commentId: comment.id}) }}" method="post">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('edit-comment' ~ comment.id) }}">
                                                    <input type="hidden" name="slug" value="{{ post.slug }}">
                                                    <div class="form-group">
                                                        <label for="editCommentText-{{ comment.id }}">Commentaire</label>
                                                        <textarea class="form-control" id="editCommentText-{{ comment.id }}" name="comment" rows="3">{{ comment.comment }}</textarea>
                                                    </div>
                                                    <div class="mt-3">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                        <button type="submit" class="btn btn-admin">Save changes</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </li>
                {% endfor %}
            </ul>
            {{ form_start(form) }}
            {{ form_row(form.comment) }}
            {{ form_row(form.submit) }}
            {{ form_end(form) }}
        </div>
    </div>



    {% block post_footer %}
        {% if nextPreviousNewsPosts is defined %}
            <div class="other-posts">
                {% include 'components/post/next-previous-news-post.html.twig' with {newsPost:nextPreviousNewsPosts.previous} %}
                {% if nextPreviousNewsPosts.previous is not null or nextPreviousNewsPosts.next is not null %}
                    {% include 'components/post/next-previous-news-post.html.twig' with {newsPost:nextPreviousNewsPosts.next} %}
                {% endif %}
            </div>
        {% endif %}
    {% endblock %}
{% endblock %}
